@model IEnumerable<KursKayit>
    <h2>Öğrenci Listesi</h2>
    <a class="btn btn-sm btn-primary mb-3" href="/kurskayit/create">Kurs Kayit Ekle</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 150px; ;">@Html.DisplayNameFor(k=>k.KayitId)</th>
                <th>@Html.DisplayNameFor(k=>k.Ogrenci.OgrenciAd)</th>
                <th>@Html.DisplayNameFor(k=>k.Kurs.Baslik)</th>
                <th style="width: 150px; ;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem=>item.KayitId )</td>
                <td>@Html.DisplayFor(modelItem=>item.Ogrenci.OgrenciAd )</td>
                <td>@Html.DisplayFor(modelItem=>item.Kurs.Baslik )</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>